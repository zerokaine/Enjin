# =============================================================================
# Enjin OSINT Platform - Production Environment Variables
# Copy this file to .env.prod and fill in real values before deploying.
# NEVER commit .env.prod to version control.
# =============================================================================

# === Domain & Admin ===
DOMAIN=enjin.yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# === Neo4j ===
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_neo4j_strong_password_here

# === PostgreSQL ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=enjin
POSTGRES_USER=enjin
POSTGRES_PASSWORD=CHANGE_ME_postgres_strong_password_here

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === Meilisearch ===
MEILI_URL=http://meilisearch:7700
MEILI_MASTER_KEY=CHANGE_ME_meili_strong_key_here

# === API ===
API_HOST=0.0.0.0
API_PORT=8000

# === External APIs (optional) ===
NEWS_API_KEY=
GDELT_BASE_URL=http://data.gdeltproject.org/api/v2
